@model FileUploader.Data.ViewModels.UploadEditViewModel

@using (Html.BeginForm("Edit", "Upload", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
  <div class="form-group">
    <h3><label class="label label-primary">Budget Justifications</label></h3>
  </div>

  <div class="form-group">
    <input type="file" multiple="multiple" class="btn btn-xs btn-default"name="BudgetJustificationUploads" id="BudgetJustificationUploads"/>
  </div>

  @Html.DisplayFor(x => x.BudgetJustificationUploads)

  <div class="form-group">
    <button class="btn btn-success" type="submit">Save</button>
  </div>
}
